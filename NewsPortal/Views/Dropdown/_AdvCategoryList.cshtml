@model IEnumerable<News.Model.AdvertisementModel>

<select class="form-control" id="Menu-DropdownID" name="MenuId" data-selected="@ViewBag.selectedId">
    <option value="-1">Select Category</option>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@item.Id" @(ViewBag.selectedId == item.Id ? "selected" : "")>@item.AdvCategory</option>
        }
    }
</select>

