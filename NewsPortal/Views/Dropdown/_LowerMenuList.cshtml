

@model IEnumerable<News.Model.MenuModel>

<select class="form-control" id="Menu-DropdownID" name="MenuId" data-selected="@ViewBag.selectedId">
    <option value="-1">Select Menu</option>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@item.MenuId" @(ViewBag.selectedId == item.MenuId ? "selected" : "")>@item.MenuName</option>
        }
    }
</select>

