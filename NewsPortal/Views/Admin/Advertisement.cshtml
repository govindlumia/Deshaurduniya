@model IEnumerable<News.Model.AdvertisementModel>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class="content-header">
    <h1>
        Advertisement List
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/Admin/CreateAdvertisement")" class="btn btn-default btn-success pull-right" style="color:white">Add Data</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AdvertisementImage)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AdvCategory)</td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteAdvertisement", new { Id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


