@model News.Model.VideoModel
@{

    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="content-header">
    <h1>
        Advertisement
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/Admin/Video")" class="btn btn-default btn-success pull-right" style="color:white">Back To List</a></li>
    </ol>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Add Advertisement</h3>
        </div>
        @using (Html.BeginForm("CreateVideo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box-body">
                <div class="row">

                    <div class="col-md-12">
                        <input type="text" name="Id" class="form-control" style="display:none" value="@Model.Id" />
                        <div class="form-group">
                            <label>Heading</label>
                            <input type="text" name="Heading" class="form-control"  value="@Model.Heading" />
                        </div>
                        <div class="form-group">
                            <label>Video Link</label>
                            <input type="text" name="youtube_link" class="form-control" value="@Model.youtube_link" />
                        </div>
                        @*<div class="form-group">
                            <label>Content</label>
                            <textarea id="editor1" name="Content" rows="10" cols="80">
                                           @Model.Content
                    </textarea>
                        </div>*@
                       
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right" id="submit">Submit</button>
            </div>
            <!-- /.box-footer -->
        }
    </div>
    <!-- /.box -->
</section>
