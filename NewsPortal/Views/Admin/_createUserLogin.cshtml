@model News.Model.UserModel
@{
    /**/

    ViewBag.Title = "_createUserLogin";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section class="content-header">
    <h1>
        User
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/Admin/UserLogin")" class="btn btn-default btn-success pull-right" style="color:white">User List</a></li>
    </ol>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Users Details</h3>
        </div>
        @using (Html.BeginForm("_createUserLogin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                       
                        <div class="form-group col-md-4">
                            <label>Name</label>
                            <input type="text" name="UserId" class="form-control" style="display:none" value="@Model.UserId" />
                            <input type="text" name="UserName" class="form-control" value="@Model.UserName" placeholder="Enter UserName" autocomplete="off" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Password</label>
                            <input type="text" name="UserPassword" class="form-control" value="@Model.UserPassword" placeholder="Enter Password" />
                        </div>
                    </div>

                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right" id="submit">Submit</button>
            </div>
            <!-- /.box-footer -->
        }
    </div>
    <!-- /.box -->
</section>
