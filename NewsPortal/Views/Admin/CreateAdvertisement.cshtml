@model News.Model.AdvertisementModel
@{
   
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="content-header">
    <h1>
        Advertisement
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/Admin/Advertisement")" class="btn btn-default btn-success pull-right" style="color:white">Back To List</a></li>
    </ol>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Add Advertisement</h3>
        </div>
        @using (Html.BeginForm("CreateAdvertisement", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box-body">
                <div class="row">

                    <div class="col-md-12">
                        <input type="text" name="Id" class="form-control" style="display:none" value="@Model.Id" />
                        <div class="form-group">
                            <label>Advertisement No.</label>
                            @Html.Action("_AdvCategoryList", "Dropdown", new { selected = @Model.Id })
                        </div>
                        <div class="form-group">
                            @if (Model.Id == 11)
                            {
                            <label>Image with size of H-150px and W-700px</label>
                            }
                            else
                            {
                            <label>Image with size of H-399px and W-255px</label>
                            }
                            <input type="file" name="file" id="file" class="form-control" value="@Model.AdvertisementImage" placeholder="Enter UserName" autocomplete="off" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right" id="submit">Submit</button>
            </div>
            <!-- /.box-footer -->
        }
    </div>
    <!-- /.box -->
</section>
